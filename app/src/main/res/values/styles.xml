<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
   <!-- MineFragment中最下面的3个选项的通用设置-->
    <style name="LoginStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/product_detail_common</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- MoreFragment布局中TextView的样式-->
    <style name="MoreTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/more_text</item>
        <item name="android:textSize">20sp</item>

    </style>


</resources>
